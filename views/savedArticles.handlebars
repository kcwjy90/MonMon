<div class="eachCard">

    <div class="row">

        <div class="col-1">

        </div>

        <div class="col-10 articleHere">

            {{#each articles}}

            <div class="card">

                <div class=" articleCardTitle">

                    <a class="articleHref" href={{link}} target="_blank">{{title}}</a>

                </div>

                <div class=" articleCardBody ">

                    <div class="row">

                        <div class="col-4">

                            <img class="articlePic" src={{picture}}>
                            <p>{{date}}</p>

                        </div>

                        <div class="col-6">

                            <p>{{summary}}</p>

                        </div>

                        <div class="col-2 buttonsHere">

                            <div class="row buttonss">

                                <div class="col-12">

                                    <button type="button" class="btn btn-primary deleteArticle" data-id={{id}}>Delete</button>

                                </div>

                            </div>

                            <div class="row buttonss">

                                <div class="col-12">

                                    <button type="button" class="btn btn-primary addNotes" data-id={{id}} data-notes={{notes}}>Add Note</button>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>

            </div>

            {{/each}}

        </div>

        <div class="col-1">

        </div>

    </div>

</div>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">

    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <div class="modal-header">

                <h5 class="modal-title deleteTitle">Success!</h5>

            </div>

            <div class="modal-body deleteBody">
                <p> "Your Article has been deleted"</p>

            </div>

            <div class="modal-footer">

                <button type="button" class="btn btn-secondary deleteModButton" id="deleteSavedArticleModalButton" data-dismiss="modal">Close</button>

            </div>

        </div>

    </div>

</div>

<div class="modal fade" id="newNote" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">

    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <div class="modal-header noteTitle">

            </div>

            <div class="modal-body noteBody">

            </div>

            <button class='saveNote'>Save Note</button>

            <div class='alertDiv'></div>

            <div class="modal-footer">

                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

            </div>

        </div>

    </div>

</div>